extends layout

block title
  title #{title} - Listing games

block content-title
  h1 All Games

block content
  if(gamelist)
  
    #games-list-label
      h3 List of games (#{gamelist.objects.length} of #{limit})
    include gamelist
    
    #games-thumb-label
      h3 Expanded view of games (#{gamelist.objects.length} of #{limit})
    include gamethumbs
    
  else
    #games-list-label
      h3 No games to show
  
